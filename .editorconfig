# Editor configuration, see http://editorconfig.org
root = true

#globais
[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

#arquivos typescript
[*.ts]
indent_style = space
indent_size = 4

#arquivos de estilo
[*.scss]
charset = utf-8
indent_style = space
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
